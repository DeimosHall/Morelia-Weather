<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoreliaClima" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_light</item>
        <item name="colorPrimaryVariant">@color/white_sky</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCardViewStyle" parent="Theme.MaterialComponents.DayNight" >
        <item name="cardBackgroundColor">@color/white_card</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="SettingsCardView" parent="MyCardViewStyle" >
        <item name="cardBackgroundColor">@color/settings_light_card</item>
    </style>

</resources>